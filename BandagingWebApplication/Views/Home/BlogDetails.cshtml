@model BandagingWebApplication.Models.Blog

@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>@Html.DisplayFor(model => model.Headline)</h4>
    <hr />
    <dl class="row">

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Headline)
        </dd>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>

        <div class="imgDummy"></div>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
